<style>
    body * {
    color: var(--Text-color);
    }
    @media (orientation: portrait){
    #name{
    width: 100%;
    }
}
</style>

<style>
body * {
    margin: 0;
    padding: 0;
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    color: black;
}

#title{
    width: 100vw;
    display: grid;
    box-sizing: border-box;
    padding-inline: 5vw;
    background-color: var(--PDF-name-BG-color);
    color: var(--Text-color);
}
#title hr{
    margin: 25px;
    border-width: 5px;
    border: solid;
}

#title p{
    margin-left: 5vw;
    font-family: 'Josefin sans';
}
#title h1{
    margin-left: 5vw;
    font-family: 'Josefin sans';
}


#profile {
    display: grid;
    width: 100vw;
    grid-template-columns: 1fr 2fr 5fr 1fr;
    grid-template-rows: 100px 1fr 100px;
    grid-template-areas: 
    "emty1 namee emty2 emty3"
    "emty1 pictu descp emty3"
    "emty1 subt emty4 emty4"
    ;
    background-color: var(--Instructor-BG-color);
}

#name{
    grid-area: namee;
    font-family: 'Josefin sans';
    justify-self: start;
    align-self: center;
    width: 230%;
    color: var(--Text-color);
    
}
#Chief{
    height: 400px;
    border: solid;
    grid-area: pictu;
}
#description{
    grid-area: descp;
    margin-left: 5%;
    font-size: 24px;
    color: var(--Text-color);
}
#description a {
    color: var(--Text-color);
}
#sub{
    grid-area: subt;
    color: var(--Text-color);
}
@media (orientation: portrait) {
    #title{
        text-align: center;
    }
    #profile {
        display: block;
        position: relative;
        height: auto;
    }
    
    #description {
        position: static;
        margin-left: 4%;
        font-size: 24px;
        width: 95%;
        box-sizing: border-box;
        padding-right: 4%;
        padding-bottom: 20px;
    }
    
    #name {
        width: 100%;
        translate: 0;
        margin-bottom: 20px;

        padding-top: 20px;
        text-align: center;
    }
    
    #Chief {
        width: 99%;
        height: auto;
        margin-bottom: 20px;
    }
    
    #sub {
        display: none;
    }
}
</style>
