---
    import Layout from "../../../layouts/GlobalHTMLLayout.astro";
    import Top from "../../../components/Sections/Top.astro";
---
<Layout name="Extra Info">
    <Top>
        <h1 style="color:black;">Extra Info</h1>
    </Top>
    <div id="tabs">
        <div>
            <button><a href="/Resources/Extra/Leadership/">Leadership</a></button>
        </div>
    </div>
</Layout>
<style>
    body *{
        color: black;
    }
    #tabs{
        display: grid;
        grid-template-columns: 1fr 1fr;
        justify-items: center;
        text-align: center;
        column-gap: 24px;
        padding: 24px;
    }
    b{
        font-weight: 600; /** r/programing war crimes */
        cursor: grab;

    }
    button{
        font-size: 3em;
        font-family: "Josefin sans";
        font-weight: 600;

        background-color: whitesmoke;
        border: black solid 5px;
        transition: 250ms ease-in-out;
        
        height: 100px;
        width: 25%;
        left: 190px;
        margin-top: 100px;
        justify-items: center;
        text-align: center;
        position: absolute;
        
    }
    button:hover{
        background-color: white;
        color: rgb(55, 55, 55) ;
        border: rgb(55, 55, 55) solid 5px;
    }
    button:active{
        color: rgb(255, 255, 255) ;
        background-color: #000;
        border: rgb(255, 255, 255) solid 5px;
    }
    #links{
    width: 100vw;
    color: #000;
    background-color: #F1F0EA;

}
.link{
    position: relative;
    width: 300px;
    height: 200px;
    text-align: center;
    align-items: center;
    color: wheat;
    border-color: #534B52;
}
.img{
  object-position: center;
    position: relative;
    padding: 2vw;
    height: 150px;
    transition: 100ms ease-in-out;
  transform-origin: center;
}
.link:hover img{
    transform-origin: center;
    cursor: pointer;
    filter: grayscale(35%);
}
a{
    color: rgb(0, 0, 0);
    transition: ease-in-out 250ms;
}
a:hover{
    color: rgb(0, 0, 255);
}
/*#474448 2D232E EDDDCF 534B52 F1F0EA */
</style>