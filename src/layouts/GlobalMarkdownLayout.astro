---

interface Props {
    frontmatter?
    boxColor?
    lineColor1?
    lineColor2?
    textColor?
    bgColor?
}
const { frontmatter, boxColor = frontmatter.boxColor, lineColor1 = frontmatter.lineColor1, lineColor2 = frontmatter.lineColor2 , textColor = frontmatter.textColor, bgColor = frontmatter.bgColor} = Astro.props;

import Header from '../components/Required/Header.astro';
import Menus from '../components/Required/menus/Menus.astro';
import Footer from '../components/Required/Footer.astro';
import Top from '../components/Sections/Top.astro';
import '../styles/Default/main.css'
// Disable the loading page if your Are developing, If You want
import Loading from '../components/Required/Loading.astro';
import Sode from '../components/Required/DarkLight.astro';
---

<!-- Default layout for all .md files -->

<!doctype html>
<html>
    <head>
        <meta charset="UTF-8" />
		<meta name="description" content="NJROTC" />
		<meta content="width=device-width, initial-scale=1" name="viewport" />
		<link rel="icon" type="image/svg+xml" href="/NJROTC-Seal.svg" />
        <meta name="google-site-verification" content="veqAgmjtvOmwMZALJnKHKFKtjwAMRzjQivx_rp-51T0" />

        <head>
        <meta charset="UTF-8" />
        <meta name="description" content="NJROTC" />
        <meta content="width=device-width, initial-scale=1" name="viewport" />
        <link rel="icon" href="/48x48.svg" type="image/svg+xml" sizes="48x48" />
        <link rel="icon" href="/96x96.svg" type="image/svg+xml" sizes="96x96" />
        <link
            rel="icon"
            href="/144x144.svg"
            type="image/svg+xml"
            sizes="144x144"
        />
        <link
            rel="icon"
            href="/192x192.svg"
            type="image/svg+xml"
            sizes="192x192"
        />
        <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap"
            rel="stylesheet"
        />
        <meta
            name="google-site-verification"
            content="veqAgmjtvOmwMZALJnKHKFKtjwAMRzjQivx_rp-51T0"
        />
        <!-- Open Graph/Twitter Cards (for better social sharing) -->
        <meta property="og:title" content="Parlier NJROTC" />
        <meta
            property="og:description"
            content="Parlier NJROTC - Developing leaders through naval science education."
        />
        <meta property="og:type" content="website" />
        <meta property="og:url" content="https://parlier-njrotc.github.io" />
        <meta
            property="og:image"
            content="https://parlier-njrotc.github.io/images/njrotc-social-preview.png"
        />
        <meta
            property="twitter:description"
            content="Parlier NJROTC - Developing leaders through naval science education."
        />
        <meta property="twitter:title" content="Parlier NJROTC" />
        <meta property="twitter:card" content="summary_large_image" />
        <meta
            property="twitter:image"
            content="https://parlier-njrotc.github.io/images/njrotc-social-preview.png"
        />
		<title>Parlier NJROTC | {frontmatter.name}</title>
    </head>
    <body style="margin:0px;">
        <Header></Header>
        <Menus></Menus>
        <Sode></Sode>
        <Loading></Loading>
        <Top backgroundColor={bgColor}>
            <h1 id="TopTitle">{frontmatter.title}</h1>
        </Top>
        <main>
            <slot/>
        </main>
        <Footer></Footer>
        <style is:global define:vars={{bgColor, boxColor, lineColor1, lineColor2, textColor}}>
            body *{
                overscroll-behavior: none;
                background-color: var(--body-color);
                font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
            }
            h1{
                font-size: 2.5em;
                font-family: "Josefin sans";
                font-weight: bold;
            }
            h2{
                font-size: 2em;
            }
            main{
                max-width: 100vw;
                padding-inline: 10vw;
                text-wrap: wrap;
            }
            main h1{
                border-top: 1px solid black;
                padding-top: 25px;
            }
            #TopTitle{
                position: relative;
                padding-inline:5vw ;
                padding-block: 25px;
                background-color: var(--boxColor);
                box-shadow: 0px 0px 10px 10px var(--boxColor);
                color: var(--textColor);
            }
            #TopTitle::before{
                content: "";

                position: absolute;
                top:-25px;
                left: -25px;

                background-color: var(--lineColor1);
                width: 50%;
                height: 5px;
            }
            #TopTitle::after{
                content: "";

                position: absolute;
                right:-25px;
                bottom: -25px;

                background-color: var(--lineColor2);
                width: 50%;
                height: 5px;
            }
            a{
                cursor: url('https://github.com/Parlier-NJROTC/Assets/raw/main/Cursor/Click.cur'), pointer;
            }
            @font-face {
                font-family: "Josefin Sans"; /** Look its me */
                src: url("/fonts/JosefinSans-VariableFont_wght.ttf");
            }
        </style>
        
    </body>
</html>