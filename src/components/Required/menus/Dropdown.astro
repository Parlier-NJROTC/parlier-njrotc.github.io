---
interface Props {
    title: string,
    link?: string,
    id:string
}

const { title ,link = title, id} = Astro.props

---


<!-- now I wont self destruct -->
<span>
    <input type="checkbox" id={id}> </input>
    <label for={id}> <img src="/icons/arrow.svg"> </label>
    <a href=`/${link}`> {title} <div id="Sidething"></div></a>
    <div style="overflow-y: hidden;">
        <div style="overflow-y: hidden;">
            <slot />
        </div>
    </div>
</span>



<style>
    span{
        display: grid;
        position: relative;
        grid-template-columns: 1fr 3fr;
        grid-template-rows: auto;
        justify-content: space-between;
        align-items:center ;
        position: relative;
        
    }
    span > a{
        position: relative;

        display: flex;
        align-items: center;
        justify-content: right;

        margin: 0px;
        padding-right: 25px;
        font-size: 24px;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        height: 50px;
        color: white;
        text-decoration: none;
        transition: ease 750ms;

    }
    span input{
        display: none;
    }
    span label{
        color: white;
        font-size: 25px;
        
    }
    span label img{
        width: 24px;
        filter: invert(1);
        transition: transform 250ms,filter ease 1s;
        
        margin-left: 20px;
    }
    span > div{
        display: grid;
        grid-template-rows: 0fr;
        overflow-y: hidden;
        grid-column: 1/-1;
        color: white;
        transition: 250ms ease-out;
        width: 100%;
        
    }
    span input:checked ~ div{
        grid-template-rows: 1fr;
        
    }
    
    span input:checked ~ label img{
        transform: scaleY(-1);
        filter: invert(0);
    }
    span input:checked ~ a {
        color:var(--Top-Menu-BG-color);
        #Sidething{
           width: 140%; 
        }
        
    }
    #Sidething{
        height: 50px;
        right: 0px;
        width: 0%;

        position: absolute;
        background: white;
        transition: ease 750ms;

        z-index: -1;
    }
    span a:hover{
        color:  var(--Top-Menu-BG-color);
        #Sidething{
            width: 140%;
        }
        
    }
</style>