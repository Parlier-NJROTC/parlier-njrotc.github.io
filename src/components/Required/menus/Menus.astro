---
import Dropdown from "./Dropdown.astro";
import Link from "./Link.astro";
import Mode from "./Mode.astro";
---
<div class="NoDark">
<input type="checkbox" id="box" />
<nav id="menus">
    <header>
        <h2 style="color: white;">Menus</h2>
        <label for="box" id="close" style="color: white;">
            X <!-- this is the close button charater, DON'T DELETE --></label>
    </header>
    <nav id="navi">
        <Link title="Home" link="" />
        <Dropdown title="Cadet Resources" link="Resources" id="SideMenus-Dropdown1">
            <a href="/Resources/Tutorials"
                >Tutorials</a>
            <a href="/Resources/Knowledge"
                >Knowledge</a>
        <!--<a href="/Resources/Extra"
               >Extra</a>  --> 
            <a href="/Resources/Tool"
                >Tools</a>
            <a href="/Resources/PDFs"
                >PDFs</a>
        </Dropdown>
        <Link title="Teams" />
        <Link title="Instructor" />
        <Dropdown title="Events" id="SideMenus-Dropdown-2">
            <a href="/Events/Calendar"
                >Calendar</a>
            <a href="/Events/Fundraising"
                >Fundraising</a>
        </Dropdown>
        <Link title="Gallery" />
        <Link title="Links" />
        <Link title="Credits" />
        <Mode></Mode>
        <span id="Awards">
            <div id="cR4reRv545"></div>
            <div id="kRg656gBt4"></div>
        </span>
    </nav>
</nav>
</div>

</html>
<style>
    a{
        font-size:20px;
        border-right: 4px solid white;
        padding: 5px;
        transition: 250ms ease-in-out;
    }
    a:hover{
        font-size:30px;
        border-right: 8px solid white;
        padding: 6px;
    }
    #cR4reRv545,
    #kRg656gBt4 {
        width: 100%;
        height: 50px;
        display: flex;
        justify-content: center;
        align-items: center;

        transition: ease 1s;
    }

    #Awards{
        margin-top: 70px;
        display: flex;

        bottom: 0%;

        width: 100%;
        height: 50px;
    }
    #menus {
        position: fixed;
        overflow-x: hidden;
        overflow-y: scroll;
        background-color: var(--backgroundColor);
        top: 0px;
        right: 0px;
        border-left: 1px solid white;
        
        z-index: 9999999;

        -ms-overflow-style: none;  /* IE and Edge */
        scrollbar-width: none;  /* Firefox */
        
        user-select: none;
        -moz-user-select: none;
        -webkit-user-select: none;
        -ms-user-select: none;
    }

    #box {
        display: none;
    }

    header {
        background-color: var(--Top-Menu-BG-color);
        height: 130px;
        color: white;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    header h2,
    header label {
        font-family: "Gill Sans", "Gill Sans MT", Calibri, "Trebuchet MS",
            sans-serif;
        font-weight: normal;
        font-size: 30px;
        margin-inline: 35px;
    }

    /** I swear if its two lines to fix I am going to obliterate my self */
    #navi {
        position: relative;
        overflow-y: scroll;

        height: calc(100vh - 130px);

        user-select: none;
        -moz-user-select: none;
        -webkit-user-select: none;
        -ms-user-select: none;
        -ms-overflow-style: none;  /* IE and Edge */
        scrollbar-width: none;  /* Firefox */
    }
    #close:hover{
        animation: infinite scarid 300ms ease-in-out;
    }
    @keyframes scarid{
        25%{
            transform: rotate(5deg);
        }
        50%{
            transform: rotate(0deg);
        }
        75%{
            transform: rotate(-5deg);
        }
        100%{
            transform: rotate(0deg);
        }
    }
    #Sidething4{
        height: 33px;
        right: 0px;
        width: 0%;

        position: absolute;
        background: white;
        transition: ease 750ms;

        z-index: -1;
    }
    span a:hover{
        color:  darkblue;
        #Sidething4{
            width: 140%;
        }
        
    } 
    a {
        text-decoration: none;
        display: flex;
        justify-content: right;
        align-items: center;
        padding-right: 20px;
        color: white;
        text-align: right;
        overflow: hidden;
        grid-row: 1 / -1;
    }

    a:visited {
        color: white;
    }

    @media (orientation: portrait) {
        #menus {
            width: 100vw;
            max-height: 0vh;
            transition: max-height 250ms;
        }

        #box:checked~#menus {
            max-height: 100vh;
            height: 100vh;
            transition: max-height 250ms;
        }
    }

    @media (orientation: landscape) {
        #menus {
            max-width: 0px;
            width: 300px;
            height: 100vh;
            transition: max-width 200ms;
        }

        #box:checked~#menus {
            max-width: 300px;
            width: 300px;
            transition: max-width 250ms;
        }
    }
</style>
