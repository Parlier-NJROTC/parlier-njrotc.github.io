---
interface Props {
    title: string,
    link?: string,
}

const { title ,link = title} = Astro.props


---

<span>
    <a href=`/${link}`> {title} <div id="Sidething"></div></a>
    
</span>
<style>
    span{
        display: grid;
        position: relative;
        grid-template-columns: 1fr;
        justify-content: space-between;
        align-items:center ;
        
    }
    span a{
        position: relative;

        display: flex;
        align-items: center;
        justify-content: right;
        height: 50px;
        text-decoration: none;
        transition: ease 750ms;
        border-right: 0px solid rgb(255, 255, 255);

        

        margin: 0px;
        padding-right: 25px;
        font-size: 24px;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        

        color: white;
    } 
    #Sidething{
        height: 50px;
        right: 0px;
        width: 0%;

        position: absolute;
        background: white;
        transition: ease 750ms;

        z-index: -1;
    }
    span a:hover{
        color:  darkblue;
        #Sidething{
            width: 100%;
        }
    }
</style>